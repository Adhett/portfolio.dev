---
export interface ExperiencieItemProps {
  title: string;
company: string;
  description: string;
  link?: string;
  date: string;
}
const {title, description,date,company} = Astro.props;
---
<ol>
<div class="absolute w-3 h-3 bg-purple-500 rounded-full mt-2 -start-1.5 border border-white dark:border-gray-900"></div>
<li class="mb-10 relative ms-4 flex gap-6 items-start">
  <div class="min-w-[180px] flex flex-col">
    <h3 class="text-lg font-semibold text-purple-400 mt-1 opacity-60">{title}</h3>
    <span class="text-xs py-4 text-gray-300">{company}</span>
    <time class="text-sm font-normal text-green-300 opacity-80">{date}</time>
  </div>
  <div class="flex-1 text-gray-300 text-balance">
    <p class="mb-2">{description}</p>
  </div>
</li>

</ol>